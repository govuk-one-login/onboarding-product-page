{% extends "base.njk" %}
{% from "macros/breadcrumbs.njk" import breadcrumbs %}

{% set pageTitle = "There is a problem registering your interest" %}
{% set breadcrumbs = breadcrumbs([{text: "Register your Interest", href: "/register"}], "Error") %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Sorry, there is a problem with registering your interest</h1>

      <p class="govuk-body">Try again later.</p>
      <p class="govuk-body">You will need to fill the form in again.</p>

      <p class="govuk-body">Contact us using our <a href="/support" class="govuk-link">
      support form</a> if this happens again.</p>
    </div>
  </div>
{% endblock %}
