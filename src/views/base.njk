{% extends "govuk/template.njk" %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{% set assetPath = "/assets" %}
{% set documentationUrl = "/documentation" %}

{% set showTopNav = showTopNav | default(true) %}
{% set mainClasses = ["govuk-main-wrapper--auto-spacing", mainClasses] | join(" ") %}

{% set phaseTagText  = "test" if showTestBanner else "beta" %}
{% set phaseBannerClasses  = "test-banner" if showTestBanner %}
{% set phaseBannerHtml = "This is a test environment." %}
{% if not showTestBanner %}
  {% set phaseBannerHtml %}
    This is a new service â€“ your
    <a href="/contact-us" class="govuk-link" rel="noreferrer noopener" target="_blank">feedback (opens in a new tab)</a> will help us improve it.
  {% endset %}
{% endif %}

{% block pageTitle %}{{ pageTitle }} - GOV.UK One Login{% endblock %}

{% block head %}
  <!--[if !IE 8]><!-->
  <link rel="stylesheet" type="text/css" href="/assets/app.css">
  <!--<![endif]-->
{% endblock %}

{% block bodyStart %}
  {%  include "common/cookie-banner.njk" %}
{% endblock %}

{% block header %}
  <header class="govuk-header {{ phaseBannerClasses }}" role="banner" data-module="govuk-header" id="top">
    <div class="govuk-header__container govuk-width-container">
      <div class="govuk-header__logo">
        <a href="/{{ homePath }}" class="govuk-header__link govuk-header__link--homepage">
          <span class="govuk-header__logotype">
            <svg aria-hidden="true" focusable="false" class="govuk-header__logotype-crown" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" height="30" width="36">
