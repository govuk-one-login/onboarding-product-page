{
  "name": "di-onboarding-product-page",
  "version": "1.0.0",
  "description": "Product and onboarding pages for the Digital Identity Auth (GOV.UK Sign In) product",
  "workspaces": [
    "ui-automation-tests"
  ],
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "local": "npm run build && node --inspect -r 'dotenv/config' dist/app.js",
    "dev": "nodemon --inspect -r 'dotenv/config' src/app.ts",
    "minifyjs": "for script in dist/assets/javascripts/*.js; do uglifyjs $script -cmo $script $(${CI:-false} || echo --source-map includeSources,url=${script##*/}.map); done",
    "buildts": "tsc $(${CI:-false} && echo --sourceMap false)",
    "buildsass": "sass --load-path=$(npm ls -p govuk-frontend)/.. --style compressed assets/css/app.scss dist/assets/app.css $(${CI:-false} && echo --no-source-map || echo --embed-sources)",
    "buildjs": "cp -vr assets/javascripts dist/assets/",
    "buildgovuk": "govuk=$(npm ls -p govuk-frontend)/govuk; cp -vr $govuk/assets/* dist/assets/ && cp -vr $govuk/vendor/polyfills/Function/prototype/bind.js dist/assets/javascripts/ && cp -v $govuk/all.js dist/assets/javascripts/govuk-all.js",
    "build": "npm run buildts && npm run buildsass && npm run buildjs && npm run buildgovuk && npm run minifyjs",
    "test": "mocha 'test/**/*.spec.ts'",
    "test:cov": "nyc npm run test",
    "sonar": "sonar-scanner",
    "cucumber": "npm run acceptance-tests -w ui-automation-tests --",
    "accessible-tests": "npm run cucumber -- --tags @accessible",
    "build-docker": "docker build --tag product-pages-frontend --file Dockerfile ..",
    "lint": "prettier . --check ; eslint .",
    "lint:fix": "prettier . --write ; eslint . --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@googleapis/sheets": "^9.4.0",
    "axios": "^1.7.5",
    "email-validator": "^2.0.4",
    "express": "^4.21.2",
    "google-auth-library": "^8.5.2",
    "googleapis": "^91.0.0",
    "govuk-frontend": "^4.8.0",
    "helmet": "^7.0.0",
    "nunjucks": "^3.2.3",
    "rfc822-validate": "^1.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.0",
    "@cucumber/cucumber": "^9.3.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.8",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^18.6.1",
    "@types/nunjucks": "^3.2.1",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.2.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.0.1",
    "nyc": "^17.0.0",
    "prettier": "^2.7.1",
    "puppeteer": "^23.1.1",
    "sass": "^1.77.8",
    "sinon": "^17.0.1",
    "sonar-scanner": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-one-login/onboarding-product-page.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/govuk-one-login/onboarding-product-page/issues"
  },
  "homepage": "https://www.sign-in.service.gov.uk/"
}
