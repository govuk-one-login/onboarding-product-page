{
  "name": "di-onboarding-product-page",
  "version": "1.0.0",
  "description": "Product and onboarding pages for the Digital Identity Auth (GOV.UK Sign In) product",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "local": "npm run build && node --inspect -r 'dotenv/config' dist/app.js",
    "dev": "nodemon --inspect -r 'dotenv/config' src/app.ts",
    "minifyjs": "for script in dist/assets/*.js; do uglifyjs $script -cmo $script; done",
    "buildts": "tsc $(${CI:-false} && echo --sourceMap false)",
    "buildsass": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js assets/css/app.scss dist/assets/app.css",
    "buildjs": "cp -vr assets/javascripts/* dist/assets/ && ${CI:-false} && npm run minifyjs || true",
    "buildgovuk": "cp -vr node_modules/govuk-frontend/govuk/assets/* node_modules/govuk-frontend/govuk/vendor/polyfills/Function/prototype/bind.js ./dist/assets/ && cp -v node_modules/govuk-frontend/govuk/all.js dist/assets/govuk-all.js",
    "buildlocalimages": "cp -v -r assets/images/* ./dist/assets/images",
    "buildlocalfiles": "mkdirp ./dist/routes/files && cp -v -r files/* ./dist/routes/files",
    "build": "npm run buildts && npm run buildsass && npm run buildgovuk && npm run buildjs && npm run buildlocalimages && npm run buildlocalfiles",
    "test": "mocha --require ts-node/register --ui bdd src/**/*.spec.ts",
    "cucumber": "cucumber-js --require-module ts-node/register --require features/support/test-setup.ts --require features/support/steps/**/*.ts --publish-quiet --tags 'not @wip'",
    "cucumber-report": "npm run cucumber -- --format html:test-report.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@googleapis/sheets": "^0.3.0",
    "axios": "^0.27.2",
    "express": "^4.18.1",
    "google-auth-library": "^8.1.1",
    "googleapis": "^91.0.0",
    "govuk-frontend": "^4.3.1",
    "node-sass-package-importer": "^5.3.2",
    "nunjucks": "^3.2.3",
    "rfc822-validate": "^1.0.0",
    "uuid": "^8.3.2",
    "email-validator": "^2.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.1",
    "@types/nunjucks": "^3.2.1",
    "@types/puppeteer": "^5.4.6",
    "@types/uuid": "^8.3.4",
    "@cucumber/cucumber": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "eslint": "^8.22.0",
    "dotenv": "^16.0.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.19",
    "puppeteer": "^15.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/di-onboarding-product-page.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/alphagov/di-onboarding-product-page/issues"
  },
  "homepage": "https://www.sign-in.service.gov.uk/"
}
